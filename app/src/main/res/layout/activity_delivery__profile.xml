<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Delivery_Profile">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bk_primary">

                <ImageView
                    android:id="@+id/dlvr_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="PROFILE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dlvr_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_power_settings_new_24"
                    android:gravity="right"
                    android:padding="20dp"
                    android:text="Logout "
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bk_secondary">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dlvr_image"
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/delivery_icon"
                    app:civ_border_color="#000"
                    app:civ_border_width="2dp">

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/dlvr_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/dlvr_image"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/deliver_name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dlvr_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dlvr_name"
                    android:layout_toRightOf="@id/dlvr_image"
                    android:padding="10dp"
                    android:text="955xxxxxxx"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dlvr_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dlvr_number"
                    android:layout_toRightOf="@id/dlvr_image"
                    android:padding="10dp"
                    android:text="delivername@gmail.com"
                    android:textSize="16sp" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

            <RelativeLayout
                android:id="@+id/dlvr_mydeliveries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/bike"
                    android:padding="30dp"
                    android:text="   My Deliveries"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

            <RelativeLayout
                android:id="@+id/dlvr_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_list_alt_24"
                    android:padding="30dp"
                    android:text="   Terms &amp; Conditions"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

            <RelativeLayout
                android:id="@+id/dlvr_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/policy"
                    android:padding="30dp"
                    android:text="   Privacy Policy"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

            <RelativeLayout
                android:id="@+id/dlvr_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:padding="30dp"
                    android:text="   About Us"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

            <RelativeLayout
                android:id="@+id/dlvr_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/help"
                    android:padding="30dp"
                    android:text="   Help"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

            <RelativeLayout
                android:id="@+id/dlvr_enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_assignment_24"
                    android:padding="30dp"
                    android:text="   Enquiry"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3E9E9">

            </View>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>