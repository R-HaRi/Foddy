<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delivery_MyDeliveries">

    <LinearLayout
        android:id="@+id/dlvr_lnr5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bk_primary">


        <ImageView
            android:id="@+id/dlvr_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="My Deliveries"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dlvr_recview3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dlvr_lnr5" />


</RelativeLayout>